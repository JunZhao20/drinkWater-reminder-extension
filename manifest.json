{
  "manifest_version": 3,
  "name": "Drink water reminder",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "alarms", "notifications", "nativeMessaging"],
  "description": "Water is essential for life. So drink it.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "./images/icon1.png"
    }
  }
}
